<h1 class="page-header">Listing Screens</h1>

<table class="table">
  <thead>
    <tr>
      <th>Avaiable</th>
      <th>Seats string</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_screens.each do |admin_screen| %>
      <tr>
        <td><%= admin_screen.avaiable %></td>
        <td><%= admin_screen.seats_string %></td>
        <td><%= link_to 'Show', [:admin, admin_screen] %></td>
        <td><%= link_to 'Edit', edit_admin_screen_path(admin_screen) %></td>
        <td><%= link_to 'Destroy', [:admin, admin_screen], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Screen', new_admin_screen_path %>
