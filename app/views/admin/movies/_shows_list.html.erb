<h2>Shows for movie</h1>

<table class="table">
  <thead>
    <tr>
      <th>starts</th>
      <th>price</th>
      <th>screen_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shows.each do |show| %>
      <tr>
        <td><%= show.start %></td>
        <td><%= number_to_currency show.price %></td>
        <td><%= show.screen_id %></td>
        <td><%= link_to 'Show', [:admin, @movie, show] %></td>
        <td><%= link_to 'Edit', edit_admin_movie_show_path(@movie, show) %></td>
        <td><%= link_to 'Destroy', [:admin, @movie, show], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

