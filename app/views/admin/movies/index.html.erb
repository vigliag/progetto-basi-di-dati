<h1 class="page-header">Listing movies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Length</th>
      <th>Year</th>
      <th>Description</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.length %></td>
        <td><%= movie.year %></td>
        <td><%= movie.description %></td>
        <td><%= movie.country %></td>
        <td><%= link_to 'Show', [:admin, movie] %></td>
        <td><%= link_to 'Edit', edit_admin_movie_path(movie) %></td>
        <td><%= link_to 'Destroy', [:admin, movie], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

