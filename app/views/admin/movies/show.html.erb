<h1 class="page-header">Movie : <%= @movie.title %></h1>
<div class="row">
<div class="col-sm-3">
<%= image_tag @movie.poster.url, width: "100%" %>
</div>
<div class="col-sm-9">
<p>
  <strong>Length:</strong>
  <%= @movie.length %> minutes
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p>
  <strong>Country:</strong>
  <%= @movie.country %>
</p>
<%= link_to 'Edit Movie', edit_admin_movie_path(@movie), class: "btn btn-primary" %>
<%= link_to 'Back', admin_movies_path, class: "btn btn-default" %>
</div>

</div>


<h2>Shows for movie</h2>
<%= render "shows_list" %>
<%= render :partial => "admin/shows/form" %>

