<h1> Buy Tickets for <%= @show.movie.title %> <%= @show.start.to_s(:short) %></h1>
<form method="POST" action="/purchase" class="form">
<%= form_tag("/purchase", method: "post") do %>
<input type="hidden" name="show_id" value="<%= @show.id %>" >

<div class="form-group">
	<label class="control-label">Your name</label>
	<input name="name" class="form-control">
</div>

<div class="form-group">
	<label class="control-label">Choose Seats</label>
	<%= render "seats_selector" %>
</div>
<p><%= number_to_currency(@show.price) %> per ticket total: <span id="total" data-price="<%= @show.price %>">$0</span></p>
<input type="submit" value="Complete purchase" class="btn btn-primary">
</form>
<% end %>